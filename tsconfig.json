{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "target": "es2018",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "rootDir": "src",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
